{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/tools/gulp",
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "sbb-angular": [
        "dist/sbb-angular"
      ],
      "sbb-angular/*": [
        "dist/sbb-angular/*"
      ]
    }
  },
  "files": [
    "gulpfile.ts"
  ]
}