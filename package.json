{
  "name": "sbb-angular-showcase",
  "version": "0.0.0-alpha.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "run-s build:library build:showcase",
    "build:library": "run-s build:library:ng build:library:styles build:library:typography",
    "build:library:ng": "ng build sbb-angular",
    "build:library:styles": "scss-bundle -e ./projects/sbb-angular/src/styles/main.scss -d ./dist/sbb-angular/styles.scss",
    "build:library:typography": "node-sass ./projects/sbb-angular/src/typography.scss ./dist/sbb-angular/typography.css",
    "install:icons": "npm install ./dist/sbb-angular --save-optional",
    "build:icons": "node ./scripts/create-svg-icons-components.js",
    "build:showcase": "ng build sbb-angular-showcase --prod",
    "pretest": "run-s build:icons build:library",
    "test": "run-s test:*",
    "test:showcase": "ng test sbb-angular-showcase -c ci",
    "test:library": "ng test sbb-angular -c ci",
    "lint": "run-s lint:*",
    "lint:showcase": "ng lint sbb-angular-showcase",
    "lint:library": "ng lint sbb-angular",
    "sbb:publish": "node scripts/publish.js",
    "sbb:publish:develop-showcase": "node scripts/publish.js develop-showcase",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.7",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.7",
    "@angular/compiler": "^6.1.7",
    "@angular/core": "^6.1.7",
    "@angular/forms": "^6.1.7",
    "@angular/http": "^6.1.7",
    "@angular/platform-browser": "^6.1.7",
    "@angular/platform-browser-dynamic": "^6.1.7",
    "@angular/router": "^6.1.7",
    "@ng-bootstrap/ng-bootstrap": "^3.2.0",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "ngx-monaco-editor": "^6.0.0",
    "rxjs": "~6.2.0",
    "util": "^0.10.4",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.8.1",
    "@angular-devkit/build-ng-packagr": "^0.8.1",
    "@angular/cli": "^6.2.1",
    "@angular/compiler-cli": "^6.1.7",
    "@angular/language-service": "^6.1.7",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.3",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lodash": "^4.17.10",
    "ng-packagr": "^4.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.4.0",
    "scss-bundle": "^2.4.0",
    "semver": "^5.5.1",
    "svgo": "^1.0.5",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  }
}
